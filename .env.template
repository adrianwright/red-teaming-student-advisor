# Azure Configuration
# Copy this file to .env and fill in your values after deployment

# Required for all scripts
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP_NAME=
AZURE_AI_PROJECT_ENDPOINT=https://<hub-name>.services.ai.azure.com/api/projects/<project>
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4.1
AZURE_AI_AGENT_NAME=StudentAdvisor
AZURE_LOCATION=eastus2

# PyRIT configuration (pyrit_tests/.env will be auto-created)
# These are used by PyRIT demos - the endpoint format is different
OPENAI_CHAT_ENDPOINT=https://<hub-name>.cognitiveservices.azure.com/openai/v1
OPENAI_CHAT_MODEL=gpt-4.1

