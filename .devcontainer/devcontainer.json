{
  "name": "Red Teaming Student Advisor",
  "image": "mcr.microsoft.com/devcontainers/python:3.13",
  
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest",
      "extensions": "account,ai"
    },
    "ghcr.io/azure/azure-dev/azd:latest": {}
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-azureresourcegroups",
        "ms-azuretools.azure-dev",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.azure-account"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          ".venv": true,
          "*.db": true
        }
      }
    }
  },
  
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt --pre",
  
  "forwardPorts": [8000, 8501],
  
  "remoteUser": "vscode",
  
  "mounts": [
    "source=${localEnv:HOME}/.azure,target=/home/vscode/.azure,type=bind,consistency=cached"
  ],
  
  "runArgs": [
    "--env-file", ".env"
  ]
}
